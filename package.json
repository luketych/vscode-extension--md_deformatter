{
  "name": "markdown-simplifier",
  "displayName": "Markdown Simplifier for LLM Ingestion",
  "description": "Strip Markdown formatting from .md files to create clean .txt files for better LLM processing",
  "version": "0.0.3",
  "publisher": "luketych",
  "repository": {
    "type": "git",
    "url": "https://github.com/luketych/vscode-extension--md_deformatter.git"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-simplifier.convertFiles",
        "title": "Markdown Simplifier: Convert MD to TXT"
      },
      {
        "command": "markdown-simplifier.toggleAutoConvert",
        "title": "Markdown Simplifier: Toggle Auto-Convert"
      }
    ],
    "configuration": {
      "title": "Markdown Simplifier",
      "properties": {
        "markdownSimplifier.sourceDirectory": {
          "type": "string",
          "default": "",
          "description": "Default source directory for Markdown files"
        },
        "markdownSimplifier.outputDirectory": {
          "type": "string",
          "default": "",
          "description": "Default output directory for converted text files"
        },
        "markdownSimplifier.previewChanges": {
          "type": "boolean",
          "default": false,
          "description": "Preview changes before converting files"
        },
        "markdownSimplifier.watchedDirectory": {
          "type": "string",
          "default": "descriptions",
          "description": "Directory to watch for automatic markdown conversion"
        },
        "markdownSimplifier.autoConvertEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic conversion of markdown files when created or modified"
        },
        "markdownSimplifier.autoConvertOutputDirectory": {
          "type": "string",
          "default": "",
          "description": "Output directory for auto-converted files (defaults to same directory if empty)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/src/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish",
    "publish:patch": "vsce publish patch",
    "publish:minor": "vsce publish minor",
    "publish:major": "vsce publish major"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/linkify-it": "^3.0.2",
    "@types/markdown-it": "^12.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.5.0",
    "eslint": "^8.28.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "markdown-it": "^13.0.1"
  }
}
